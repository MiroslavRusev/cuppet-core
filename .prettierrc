{
    "semi": true,
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "css",
    "bracketSameLine": false,
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "tabWidth": 2,
                "printWidth": 150,
                "htmlWhitespaceSensitivity": "ignore",
                "bracketSameLine": true
            }
        }
    ]
}
